@model IEnumerable<tireFitting.Models.Order>
@{
    ViewData["Title"] = "Список заказов";
}
<h3>Список записей</h3>
@if (Model is null)
{
    <p>У вас нет записей!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Дата</th>
                <th scope="col">Описание работ</th>
                <th scope="col">Удалить</th>
            </tr>
        </thead>

        @foreach (var order in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@order.OrderId</th>
                    <td>@order.DateCompletion</td>
                    <td>@order.Comment</td>
                    <td><a href="~/Customer/DeleteOrder/@order.OrderId">Удалить</a></td>
                </tr>
            </tbody>
        }

    </table>
}
<a href="~/Customer/AddOrder" type="button" class="btn btn-primary">Записаться на шиномонтаж</a>